doctype html
html(lang="en")
  meta(charset="UTF-8")
  title #{title}
  meta(content='width=device-width, initial-scale=1, maximum-scale=1, users-scalable=no' name='viewport')
  head
    link(type="text/css" rel="stylesheet" href="stylesheets/DB.css")
  body
    .mysql_row
      ul.table.mn1#memetable
        li
          ul.thead
            li #id
            li memename
            li memetag
            li memetext
            li memeimgurl
            li operation
        - for meme in data
          li
            ul.tabrow(data-id="#{meme.id}")
              li #{meme.id}
              li #{meme.memename}
              li #{meme.memetag}
              li #{meme.memetext}
              li #{meme.memeimgurl}
              li
                a(href="#").update 修改
                | &nbsp;|&nbsp;
                a(href="#").delete 删除
    .mysql_row
      span.nw1 词条名:
      input(type="text" value="请输入词条名")#memename
      br
      br
      span.nw1 词条标签:
      input(type="text" value="请输入词条标签")#memetag
      br
      br
      span.nw1 词条释义:
      input(type="text" value="请输入词条释义")#memetext
      br
      br
      span.nw1 词条图片路径:
      input(type="text" value="")#memeimgurl
    .mysql_row
      button#update.ele_none 修改
      |&nbsp;&nbsp;&nbsp;
      button#add 添加
      |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      a(href="/user") 审核用户上传词条

    script(type="text/javascript" src="lib/jQuery-2.1.4.min.js")
    script(type="text/javascript" src="javascripts/DB.js")